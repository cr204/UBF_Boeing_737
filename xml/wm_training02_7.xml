			<key panel="recall" element="recall" switch="off" />
		<!-- HELP BOX -->
			<help_box completed="yes"><![CDATA[ QRH NNC COMPLETE ]]></help_box>
		<!-- ANIMATION STEP -->
			<screen name="ecam" screenID="3" />
		</state>
<!-- ************************************************** -->		
	</states>
	
